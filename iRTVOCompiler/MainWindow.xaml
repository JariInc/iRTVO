<Window x:Class="iRTVOCompiler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="iRTVO Script Compiler" Height="350" Width="525">
    <Grid Margin="0,0,0,33">
        <Menu HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" >
            <MenuItem x:Name="LoadScript" Header="Load ...." Click="LoadScript_Click"/>
            <MenuItem x:Name="RecompileScript" Header="Recompile" Click="RecompileScript_Click"/>
            <MenuItem x:Name="ClearScript" Header="Clear" Click="ClearScript_Click"/>
        </Menu>
        <TextBox x:Name="tbResults" Margin="0,23,0,-34" TextWrapping="Wrap"/>
    </Grid>
</Window>
